<Window x:Class="ImageWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageWatcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Border DockPanel.Dock="Top" Padding="0,2" Background="Gray" BorderBrush="Black" BorderThickness="1">
            <DockPanel Margin="4">
                <Button Width="40" Click="Button_Click">Open</Button>
            </DockPanel>
        </Border>
        <Image x:Name="imagebox"></Image>
    </DockPanel>
</Window>
